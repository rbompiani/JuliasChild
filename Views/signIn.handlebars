{{#if login}}
<form action="/logIn/" method="GET" id="signInForm">
    <div class="logIncontainer">
        <h1 class="logIn" id="logInID">Log In</h1>
{{else}}
<form action="/signIn/" method="POST">
    <div class="SignIncontainer">
        <h1 class="signIn" id="signInID">Sign Up</h1>
{{/if}}

        <div class="form-group">

            <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp"
                placeholder="Enter email">

        </div>
        <div class="form-group">

            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            <input class="btn btn-primary" id="submitLoginButton" type="submit" value="Submit">

            {{#if signUp}}
                <a class="btn btn-primary" id="signUpButton" href="/login/" role="button">Log In</a>
            {{/if}}

        </div>
    </div>
</form>



