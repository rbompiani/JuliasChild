    $(document).ready(function(){
        $("#search-btn").on("click", function() {

            var searchTerm = $("#apiSearch").val().trim();
            var newRoute = "/api/recipes/"+searchTerm;
            console.log("routing to...",newRoute);

            window.location.replace(newRoute);
        });

    })

</script>
